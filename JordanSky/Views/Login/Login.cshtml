@model JordanSky.Entity.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<br /><br /><br /><br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section id="appointment" class="appointment section-bg">
        <div class="container" data-aos="fade-up">
            @if (ViewBag.error == null)
            {
                <div class="row" hidden>
                    <div class="col-md-12">

                        <div class="alert alert-danger">
                            <strong>Wrong </strong> Username Or Password is Wrong
                        </div>

                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">

                        <div class="alert alert-danger">
                            <strong>Wrong </strong> Username Or Password is Wrong
                        </div>

                    </div>
                </div>
            }
            <div class="section-title">
                <h2>Admin Login</h2>
            </div>

            <div class="php-email-form" data-aos="fade-up" data-aos-delay="50">
                <div style=" border: 2px solid red;padding: 10px;border-radius: 50px 20px;">
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-4 form-group">
                            <input type="text" hidden />
                        </div>
                        <div class="col-md-4 form-group">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <input type="text" hidden />
                        </div>
                        <div class="col-md-4 form-group mt-3 mt-md-0">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", type = "password" } })
                        </div>
                    </div>
                    <div class="text-center"><button type="submit" id="btnSave">Login</button></div>
                </div>
            </div>

        </div>
    </section>
}

