@model IEnumerable<JordanSky.Entity.Hotel>

@{
    ViewBag.Title = "Hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /> <br /><br />
<div class="container">
    <section id="appointment" class="appointment section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>حدد رحلتك</h2>
                <p>اختر ما يناسبك لتسهل عليك الإختيار</p>
            </div>
            <div class="php-email-form" data-aos="fade-up" data-aos-delay="100">
                <div class="row">
                    <h6>السعر</h6>
                    <div class="col-md-6 form-group">
                        <input type="number" class="form-control" id="txtFierstNum" placeholder="من">
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <input type="number" class="form-control" id="txtSecondNum" placeholder="إلى">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 form-group mt-3">
                        <select id="ddlCity" class="form-control">
                            <option value="-1">إختر المحافظة </option>
                            @foreach (var item in ViewBag.City)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 form-group mt-3">
                        <select id="ddlrating" class="form-control">
                            <option value="-1">إختر التصنيف </option>
                            @foreach (var item in ViewBag.Cate)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 form-group mt-3">
                        <select id="ddlCategory" class="form-control">
                            <option value="-1">إختر الفئة </option>
                            @foreach (var item in ViewBag.Type)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="text-center"><button type="submit" onclick="btnSave()">ابحث</button></div>
            </div>
        </div>
    </section>
    <section id="doctors" class="doctors section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>خوض التجربة</h2>
            </div>
            <div class="row">
                @foreach (var item in ViewBag.Hotel)
                {
                    <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                        <div class="member" data-aos="fade-up" data-aos-delay="100">
                            <div class="member-img">
                                @if (item.defaultImage != null)
                                {
                                    <img src="~/Image_Hotel/@item.defaultImage" class="card-img-top" alt="">
                                }
                                else
                                {
                                    <img src="~/Image_Facilty/no.jpg" class="card-img-top" alt="">
                                }
                                
                            </div>
                            <div class="member-info">
                                <h3>@item.Name</h3>
                                <h5>@item.city.Name</h5>
                                <span>ابتداء من @item.Price_Day دينار</span>
                                <a class="btn btn-outline-dark" href="@Url.Action("DetailsHotel","Hotels",new {id= item.Id })">التفاصيل</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
<script src="~/Script_website/Filter_Hotel.js"></script>