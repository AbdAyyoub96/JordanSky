@model JordanSky.Entity.Hotel

@{
    ViewBag.Title = "DetailsHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
<link href="~/Content/assets/css/Picture.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>
<style>
    pre {
        white-space: pre-wrap; /* Since CSS 2.1 */
        word-wrap: break-word; /* Internet Explorer 5.5+ */
    }
</style>

<br /> <br />
<br />
<div class="container">
    <div class="section-title">
        <br />
        <br /> <br />
        <br />
        @if (ViewBag.Messg != null)
        {
            <div class="row">
                <div class="col-md-12">

                    <div class="alert alert-success">
                        <strong>تم ارسال طلبك !</strong> سوف نتواصل معك باسرع وقت لترتيب الحجز
                    </div>

                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <h2> @Html.DisplayFor(model => model.Name)</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Ref No:@Html.DisplayFor(model => model.Ref_No)</h3>
            </div>
        </div>
    </div>
    <div style="border-radius:1px 3px;border-top:3px solid #ed3c0d"></div>
    <br />
    <div class="row">
        <div class="col-lg-6 mt-4 mt-lg-0">
            <section class="contact">
                <div class="row">
                    <div class="col-12 section-title">
                        <h3 class="mb-3">التفاصيل</h3>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <p>
                            <i class="bx bxs-city" style="color:#ed3c0d"></i>
                            <strong class="color-black">المحافظة : </strong> @Html.DisplayFor(model => model.city.Name)
                        </p>

                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <p>
                            <i class="bx bx-dollar-circle" style="color:#ed3c0d"></i>
                            <strong class="color-black">السعر : </strong> @Html.DisplayFor(model => model.Price_Day) دينار
                        </p>
                    </div>
                </div>
                <div style="border-radius:1px 3px;border-top:3px solid #ed3c0d"></div>
                <br />
                <div class="row">
                    <div class="col-12">
                        <h3 class="mb-3">الإضافات</h3>
                    </div>
                    <div class="section ab-c-b">
                        <strong style="color:#ed3c0d;font-size:15px">نوع النزيل : </strong>
                        <br />
                        @foreach (var item in ViewBag.Cate)
                        {
                            <strong>@item.category.Name</strong> <br />
                        }
                        <br />
                        <strong class="mt-3" style="white-space: pre-line">@Html.DisplayFor(model => model.Description)</strong>
                    </div>
                    <a class="btn btn-outline-dark " href="@Html.DisplayFor(model => model.Maps)"><i class="bx bx-current-location"></i> Google Maps</a>
                </div>
            </section>
        </div>
        <div class="col-lg-6 mt-4 mt-lg-0">
            <div class="row">
                @foreach (var item in ViewBag.Images)
                {

                    <div class="col-sm-3 col-md-3 col-lg-6 item">
                        <a href="~/Image_Hotel/@item.ImagePath" data-lightbox="photos">
                            <img class="img-fluid" src="~/Image_Hotel/@item.ImagePath">
                        </a>
                    </div>
                }
            </div>
        </div>
        <a class="btn btn-outline-success btn-lg btn-block" href="https://api.whatsapp.com/send/?phone=962796335498&text=+Ref No:@Html.DisplayFor(model => model.Ref_No)+&app_absent=0"><i class="bx bxl-whatsapp"></i> إحجز عبر الواتساب</a>
    </div>
</div>
<section class="contact">
    <div class="row">
        <a class="btn btn-success btn-lg btn-block" id="btnSave" href="@Url.Action("Book","Hotels",new {id= ViewBag.ID })">  احجز الآن</a>
    </div>
</section>
