@model JordanSky.Entity.Internal_Package

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /> <br />
<br />

<script src="~/Scripts/jquery-3.3.1.js"></script>
<div class="container">
    <div class="section-title">
        <br />
        <br /> <br />
        <br />
        @if (ViewBag.Messg != null)
        {
            <div class="row">
                <div class="col-md-12">

                    <div class="alert alert-success">
                        <strong>تم ارسال طلبك !</strong> سوف نتواصل معك باسرع وقت لترتيب الحجز
                    </div>

                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <h2> @Html.DisplayFor(model => model.Name_Pakage)</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Ref No:@Html.DisplayFor(model => model.Ref_No)</h3>
            </div>
        </div>
    </div>
    <div style="border-radius:1px 3px;border-top:3px solid #ed3c0d"></div>
    <br />
    <div class="row">
        <div class="col-lg-6 mt-4 mt-lg-0">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var first = true;
                    }
                    @foreach (var item in ViewBag.Images)
                    {
                        <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                            <img class="d-block w-100" src="~/Image_package/@item.ImagePath" width="100" height="400" alt="">
                        </div>
                        first = false;
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-lg-6 mt-4 mt-lg-0">
            <section class="contact">
                <div class="row">
                    <div class="col-12 section-title">
                        <h3 class="mb-3">التفاصيل</h3>
                    </div>
                    <div style="border-radius:1px 3px;border-top:3px solid #ed3c0d"></div>
                    <br />
                    <div class="col-lg-12 col-md-6 col-sm-6">
                        <p>
                            <strong class="color-black">نوع الرحلة : </strong> @Html.DisplayFor(model => model._Package.Name)
                        </p>
                        <p>
                            <strong class="color-black"></strong> @Html.DisplayFor(model => model.No_Day)
                        </p>
                        <p>
                            <strong class="color-black"></strong> @Html.DisplayFor(model => model.Description)
                        </p>
                        <p>
                            <strong class="color-black">السعر للشخص :</strong> @Html.DisplayFor(model => model.Price) دينار
                        </p>
                        <p>
                            <strong class="color-black">السعر للأطفال :</strong> @Html.DisplayFor(model => model.Child_Price) دينار
                        </p>
                        <p>
                            <strong class="color-black">@Html.DisplayFor(model => model.Note_price)</strong>
                        </p>
                        <p>
                            <strong class="color-black">وقت الإنطلاق :</strong>
                            @Html.DisplayFor(model => model.StartDate)
                        </p>
                        <p>
                            <strong class="color-black">وقت العودة :</strong>
                            @Html.DisplayFor(model => model.EndDate)
                        </p>
                        <p>
                            <strong class="color-black">مكان الطعام :</strong>
                            <br />
                            @Html.DisplayFor(model => model.name_restaurant)
                        </p>
                        <p>
                            <strong class="color-black">مكان المبيت :</strong>
                            <br />
                            @Html.DisplayFor(model => model.overnight_Stay_name)
                        </p>
                        <div style="border-radius:1px 3px;border-top:3px solid #ed3c0d"></div>
                        <p>
                            <strong class="color-black">للتواصل :</strong> @Html.DisplayFor(model => model.Phone)
                            <br />
                            <a class="btn btn-outline-success btn-lg btn-block" href="https://api.whatsapp.com/send/?phone=962798363493&text=+Ref No:@Html.DisplayFor(model => model.Ref_No)+&app_absent=0"><i class="bx bxl-whatsapp"></i> إستفسر عبر الواتساب</a>

                        </p>
                    </div>
                </div>
            </section>
        </div>
        <div class="row">
            <a class="btn btn-danger btn-lg btn-block" id="btnSave" href="@Url.Action("Book","Facilty",new {id= ViewBag.ID })">  احجز الآن</a>
        </div>
    </div>
      
</div>
