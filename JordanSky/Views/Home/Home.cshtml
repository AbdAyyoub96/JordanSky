
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="hero">
    <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

        <div class="carousel-inner" role="listbox">

            <!-- Slide 1 -->
            <div class="carousel-item active" style="background-image:url(../../Content/assets/img/slide/slide-1.jpg)">

                <div class="container">
                    <h2>مرحبا بك في  <span>سما الأردن</span></h2>
                    <h4>تجول في جميع أنحاء الأردن بأقل الاسعار</h4>
                    <h5>اقضي أجمل الأوقات برفقة العائلة</h5>


                </div>
            </div>
            <div class="carousel-item" style="background-image: url(../../Content/assets/img/slide/slide-2.jpg)">
                <div class="container">
                    <h2>الشاليهات والمزارع</h2>
                    <h4>ابحث عن افخم الشاليهات والمزارع الموجوده في الأردن</h4>
                    <h5>اقضي أجمل الأوقات برفقة الأصدقاء</h5>
                    <a href="@Url.Action("Index","Facilty")" class="btn-get-started scrollto">المزيد ...</a>

                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item" style="background-image: url(../../Content/assets/img/slide/slide-3.jpg)">
                <div class="container">
                    <h2>الفنادق والشقق الفندقية</h2>
                    <h4>ابحث عن افخم الفنادق والشقق الفندقية الموجوده في الأردن</h4>
                    <h5>اقضي أجمل الأوقات برفقة العائلة</h5>
                    <a href="@Url.Action("Hotel", "Hotels")" class="btn-get-started scrollto">المزيد ...</a>
                </div>
            </div>

        </div>
        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

    </div>
</section>
