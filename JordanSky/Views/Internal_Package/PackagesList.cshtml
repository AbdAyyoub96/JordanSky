@model IEnumerable<JordanSky.Entity.Internal_Package>

@{
    ViewBag.Title = "PackagesList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>PackagesList</h2>

@if (ViewBag.msg != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> This alert box could indicate a successful or positive action.
    </div>      }


<div class="card">
    <div class="card-header header-elements-inline">
        <h2 class="card-title">Facilty</h2>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("UploadImage", "Internal_Package", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="row" id="divUpload" style="display:none">
            <div class="col-lg-9 mx-auto">
                <input type="file" name="file" class="form-control" required />
                <input type="hidden" name="Img_id" id="idImg" class="form-control" required />

            </div>
            <div class="col-lg-3 mx-auto">
                <input type="submit" value="Upload" class="btn btn-outline-danger border-0" />
            </div>
        </div>

    }
    <table class="table datatable-show-all">
        <thead>
            <tr>

                <th>Ref_No</th>
                <th>Name</th>
                <th>Price</th>
                <th>Child Price</th>
                <th>Start Date</th>
                <th>Type</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Ref_No</td>
                <td>@item.Name_Pakage</td>
                <td>@item.Price</td>
                <td>@item.Child_Price</td>
                <td>@item.StartDate</td>
                <td>@item._Package.Name</td>
                <td class="text-center">
                    <div class="list-icons">
                        <a href="#" class="btn btn-outline-dark" id=""><i class="text-blue-800    icon-pencil5 position-left" onclick="iconEdite(@item.Id)"></i></a>
                        |
                        <a href="@Url.Action("Details","Facilty",new {id= item.Id })" class="btn btn-outline-dark"><i class="text-success-800 icon-screen-full position-left"></i></a>
                        |
                        <a href="@Url.Action("Index","Images",new {id= item.Id })" class="btn btn-outline-dark">
                            <i class="text-orange-800 icon-images3 position-left"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark" onclick="return btnShow(@item.Id)"><i class="text-green-800 icon-attachment position-left"></i></a>
                        |
                        <a href="#" class="btn btn-outline-dark" id=""><i class="text-danger-800  icon-trash   position-left" onclick="iconDelete(@item.Id)"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>


</div>
<script>

    function btnShow(id) {
        debugger

        $("#divUpload").show();
        $("#idImg").val(id);

    }
</script>